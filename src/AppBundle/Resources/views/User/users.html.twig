{% extends "AppBundle:Layouts:layout.html.twig" %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/custom/users.js')}}"></script>

{% endblock%}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Usuarios registrados</h1>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col-lg-12 box-default">

            <h1>Registros</h1>

            <div class="count">
                <span class="label label-primary">
                    Total de registros {{ pagination.getTotalItemCount }}
            </div>
            <hr>
            <div class="box-content box-users">
                {% for user in pagination %}
                    <div class="col-lg-12 user-item">
                        <div class="avatar">
                            {% if user.image == null %}
                                <img src="{{asset('assets/images/default.jpg')}}">
                            {% else %}
                                <img src="{{asset('uploads/users/'~user.image)}}">
                            {% endif %}

                        </div>
                        <div class="user-item-content">
                            <p>
                                <a href="{{path('user_profile', {'email':user.email})}}">
                                   {{user.name}} {{user.plastname}}
                                </a>
                            </p>
                            <p>Email: {{user.email}}</p>
                            <div class="clear-fix"></div>
                            <hr>
                        </div>

                    </div>
                {% endfor %}
            </div>
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}
