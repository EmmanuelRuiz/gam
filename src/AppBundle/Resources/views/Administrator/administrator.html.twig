{% extends "AppBundle:layouts:layout.html.twig" %}
{% block content %}
    <div class="container">
        <div class="col-lg-12">
            <h1>Panel de administrador</h1>
            <hr />
        </div>

        <div class="row ">
            <div class="container">
                
                
                <div class="col-lg-4">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <h2><span class="span-validate glyphicon glyphicon-user"></span></h2>
                                </div>
                                <div class="col-xs-9 text-right">
                                    {% for usuarios in usuarios %}
                                        <h4 class="huge">{{usuarios}}</h4>
                                    {% endfor %}
                                    <p>Administrar usuarios</p>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <a href="{{path("administrator_user")}}">Ver detalles</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-lg-offset-2">
                    <div class="panel panel-danger">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <h2><span class="span-validate glyphicon glyphicon-remove-circle"></span></h2>
                                </div>
                                <div class="col-xs-9 text-right">
                                    {% for todos_cenotes in todos_cenotes %}
                                        <h4 class="huge">{{todos_cenotes}}</h4>
                                    {% endfor %}
                                    <p>Administrar cenotes</p>
                                </div>
                            </div>
                        </div>
                        <div class="panel-body">
                            <a href="{{path("administrator_allcenotes")}}">Ver detalles</a>
                        </div>
                    </div>
                </div> 
            </div>

        </div>
                        
        
    </div>
{%endblock%}